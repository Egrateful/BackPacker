            //    type: 'Get',
            //    url: strurl,
            //    contentType:'application/json'
            //    //'dataType': 'json'
            //}).done(function (data) {
            //    $(document).on('keyup.autocomplete', '#City', function (e) {
            //        $(this).autocomplete({ source: data });
            //    })
            //})
        })
    </script>
}