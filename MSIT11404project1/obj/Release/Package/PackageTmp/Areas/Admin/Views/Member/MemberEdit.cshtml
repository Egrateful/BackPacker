@model MSIT11404project1.Models.Members

@{
    ViewBag.Title = "更新會員資料";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutMembers.cshtml";
}

@using (Html.BeginForm("MemberIEdit", "Member", new { area = "Admin" }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>更新會員資料</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MemberID)

        <div class="form-group">
            <label class="control-label col-md-2">電子信箱</label>
            <div class="col-md-5">
               
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">           
            <label class="control-label col-md-2">密　　碼</label>
            <div class="col-md-5">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">           
            <label class="control-label col-md-2">姓　　名</label>
            <div class="col-md-5">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">西元生日</label>
            <div class="col-md-5">
                @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">證件號碼</label>
            <div class="col-md-5">
                @Html.EditorFor(model => model.OfficialID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OfficialID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">性　　別</label>
            <div class="col-md-5">
                <select name="gm_gender">
                    <option value="M">先生</option>
                    <option value="F">女士</option>
                </select>
                @*@Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
            </div>
        </div>       

        <div class="form-group">
            <label class="control-label col-md-2">住　　址</label>
            <div class="col-md-5">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">行動電話</label>
            <div class="col-md-5">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">照    片</label>
            <div class="col-md-5">
                    @*<img src="@Url.Action("GetHeadPic","Main",new {area="Blog", id = Model.UserPhoto })" class="img-thumbnail thumb" />*@
                 
</div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="儲存更新" class="btn btn-default" />
            </div>
        </div>
    </div>
}

