
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPro.cshtml";
}

@section Style{
    <style>
        th {
            width: 1000px;
        }

        .job {
            width: 550px;
            padding: 5px;
            margin: 10px;
            border: solid #808080 1px;
